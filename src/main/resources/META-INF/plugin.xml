<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.pkohlmann1.testplugin</id>
    <name>testPlugin Template</name>
    <vendor>pkohlmann1</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>
    <resource-bundle>messages.InspectionBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.pkohlmann1.testplugin.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <localInspection language="JAVA"
                         displayName="Static variable inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.staticvariables.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.codeOptimizations.StaticVariablesInspection"/>
        <localInspection language="JAVA"
                         displayName="Prefer int and long types"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.typeoptimization.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.codeOptimizations.TypeOptimizationInspection"/>
        <localInspection language="JAVA"
                         displayName="Prefer comparison to zero inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.comparisonzero.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.codeOptimizations.PreferComparisontoZeroInspection"/>
        <localInspection language="JAVA"
                         displayName="Prefer Integer Loop counters inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.loopcounters.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.codeOptimizations.PreferIntegerLoopCounterInspection"/>
        <localInspection language="JAVA"
                         displayName="Simplify nested loop inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.simplifyloop.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.refactoring.SimplifyNestedLoopInspection"/>
        <localInspection language="JAVA"
                         displayName="Introducing explaining variables inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.variables.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.refactoring.IntroduceExplainingVariableInspection"/>
        <localInspection language="JAVA"
                         displayName="Encapsulating field inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.encapsulating.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.refactoring.EncapsulateFieldInspection"/>
        <localInspection language="JAVA"
                         displayName="Network communication inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.network.communication.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.generalRules.NetworkCommunicationInspection"/>
        <localInspection language="JAVA"
                         displayName="Polling inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.polling.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.generalRules.PollingInspection"/>
        <localInspection language="JAVA"
                         displayName="Database communication inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.database.communication.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.generalRules.DatabaseCommunicationInspection"/>
<!--        <localInspection language="JAVA"-->
<!--                         displayName="File usage inspection"-->
<!--                         bundle="messages.InspectionBundle"-->
<!--                         key="inspection.detecting.file.usage.display.name"-->
<!--                         groupPath="Java"-->
<!--                         groupBundle="messages.InspectionsBundle"-->
<!--                         groupKey="group.names.probable.bugs"-->
<!--                         enabledByDefault="true"-->
<!--                         level="WARNING"-->
<!--                         implementationClass="com.github.pkohlmann1.testplugin.inspections.generalRules.FileUsageInspection"/>-->
        <localInspection language="JAVA"
                         displayName="Bulk operations inspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.detecting.bulkoperations.display.name"
                         groupPath="Java"
                         groupBundle="messages.InspectionsBundle"
                         groupKey="group.names.probable.bugs"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.pkohlmann1.testplugin.inspections.generalRules.BulkOperationInspection"/>
    </extensions>
    <actions>
        <group id="TestPlugin.HelloAction" text="EEA" description="Energy-Effifiency-Assistant">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="com.github.pkohlmann1.testplugin.actions.About" id="TestPlugin.Actions.About" text="About"/>
            <action class="com.github.pkohlmann1.testplugin.actions.Instruction" id="TestPlugin.Actions.Instruction" text="Instruction"/>
            <action class="com.github.pkohlmann1.testplugin.actions.FileChecker" id="TestPlugin.Actions.FileChecker" text="FileChecker"/>
            <action
                    id="EditorBasics.EditorIllustrationAction"
                    class="com.github.pkohlmann1.testplugin.actions.EditorIllustrationAction"
                    text="Editor Replace Text"
                    description="Replaces selected text with 'Replacement'."
            />
    </group>
    </actions>
    <applicationListeners>
        <listener class="com.github.pkohlmann1.testplugin.listeners.MyFrameStateListener" topic="com.intellij.ide.FrameStateListener"/>
        <listener class="com.github.pkohlmann1.testplugin.listeners.MyVfsListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>
    <projectListeners>
        <listener class="com.github.pkohlmann1.testplugin.listeners.MyToolWindowListener" topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>
        <listener class="com.github.pkohlmann1.testplugin.listeners.CPUUsageListener" topic="com.intellij.execution.ExecutionListener"/>
    </projectListeners>

</idea-plugin>
