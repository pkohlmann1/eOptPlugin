<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.pkohlmann1.testplugin</id>
    <name>testPlugin Template</name>
    <vendor>pkohlmann1</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.pkohlmann1.testplugin.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
    </extensions>
    <actions>
        <group id="TestPlugin.HelloAction" text="EEA" description="Energy-Effifiency-Assistant">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="com.github.pkohlmann1.testplugin.actions.About" id="TestPlugin.Actions.About" text="About"/>
            <action class="com.github.pkohlmann1.testplugin.actions.Instruction" id="TestPlugin.Actions.Instruction" text="Instruction"/>
            <action class="com.github.pkohlmann1.testplugin.actions.Refactor" id="TestPlugin.Actions.Refactor" text="Refactor"/>
            <action
                    id="EditorBasics.EditorIllustrationAction"
                    class="com.github.pkohlmann1.testplugin.actions.EditorIllustrationAction"
                    text="Editor Replace Text"
                    description="Replaces selected text with 'Replacement'."
                    icon="SdkIcons.Sdk_default_icon">
                <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            </action>
        </group>
    </actions>

    <applicationListeners>
        <listener class="com.github.pkohlmann1.testplugin.listeners.MyFrameStateListener" topic="com.intellij.ide.FrameStateListener"/>
        <listener class="com.github.pkohlmann1.testplugin.listeners.MyVfsListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>
    <projectListeners>
        <listener class="com.github.pkohlmann1.testplugin.listeners.MyToolWindowListener" topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>
    </projectListeners>
</idea-plugin>
